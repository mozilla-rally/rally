{
  "description": "The Mozilla Rally extension for data collection",
  "author": "Mozilla",
  "name": "Mozilla Rally",
  "version": "0.5.1",
  "homepage_url": "https://github.com/mozilla-rally/rally",
  "options_ui": {
    "page": "public/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "idle",
    "webNavigation",
    "webRequest",
    "storage",
    "unlimitedStorage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://members.rally.mozilla.org/*"
      ],
      "js": [
        "dist/main.content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "incognito": "not_allowed"
}
